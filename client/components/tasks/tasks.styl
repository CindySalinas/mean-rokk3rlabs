
.container-list
	text-align center
	.form, .lists
		display inline-block
		text-align left
		vertical-align top
	.form
		padding 0 10px
		width 30%
		ul
			list-style none
			padding 0
			width 100%
			li
				padding 10px 0
			label
				display block
			input
				height 20px
				padding 5px 8px
				width 70%
	.lists
		width 60%

table
	border-collapse collapse
	font-family arial, sans-serif
	width: 100%
	td, th
		border 1px solid #dddddd
		padding 8px
		text-align left
	tr:nth-child(even)
		background-color #dddddd
	tr.overdue
		color red
